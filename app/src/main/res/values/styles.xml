<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/bg_window</item>
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="android:textColor">@color/body_text</item>
    </style>

    <style name="AppTheme.Fullscreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@android:color/black</item>
    </style>

    <style name="Toolbar_Popup" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">#fff</item>
        <item name="android:colorBackground">@android:color/holo_red_dark</item>
    </style>
</resources>
